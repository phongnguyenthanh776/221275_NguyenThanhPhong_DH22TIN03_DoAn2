@model HealthManagement.Controllers.HealthProfileViewModel

@{
    ViewData["Title"] = "Hồ sơ sức khỏe";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="bi bi-person-lines-fill"></i> Hồ sơ sức khỏe của bạn</h4>
            </div>
            <div class="card-body">
                <form asp-action="Profile" method="post">
                    <input type="hidden" asp-for="MaHoSo" />
                    <input type="hidden" asp-for="MaNguoiDung" />

                    <h5 class="mb-3"><i class="bi bi-person"></i> Thông tin cá nhân</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="HoTen" class="form-label"></label>
                            <input asp-for="HoTen" class="form-control" placeholder="Họ tên" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="NgaySinh" class="form-label"></label>
                            <input asp-for="NgaySinh" type="date" class="form-control" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="GioiTinh" class="form-label"></label>
                            <select asp-for="GioiTinh" class="form-select">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                                <option value="Khác">Khác</option>
                            </select>
                            <span asp-validation-for="GioiTinh" class="text-danger"></span>
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <h5 class="mb-3"><i class="bi bi-rulers"></i> Thông tin cơ bản</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ChieuCao" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="ChieuCao" class="form-control" placeholder="Ví dụ: 170" />
                                <span class="input-group-text">cm</span>
                            </div>
                            <span asp-validation-for="ChieuCao" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="CanNang" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="CanNang" class="form-control" placeholder="Ví dụ: 65" />
                                <span class="input-group-text">kg</span>
                            </div>
                            <span asp-validation-for="CanNang" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle"></i> Lưu hồ sơ
                        </button>
                        <a asp-action="CalculateBMI" class="btn btn-outline-primary">
                            <i class="bi bi-calculator"></i> Tính BMI & nhận khuyến nghị
                        </a>
                        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại Dashboard
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
