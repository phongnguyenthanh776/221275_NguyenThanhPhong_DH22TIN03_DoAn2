@model HypertensionRequest

@{
    ViewData["Title"] = "Dự đoán Huyết Áp Cao";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4><i class="bi bi-speedometer2"></i> Dự đoán Huyết Áp Cao</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning mb-4">
                    <strong><i class="bi bi-exclamation-triangle"></i> Lưu ý:</strong> Đây là công cụ hỗ trợ dự đoán. Vui lòng tham khảo bác sĩ!
                </div>

                <form asp-action="PredictHypertension" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Age" class="form-label fw-bold">Tuổi *</label>
                            <input asp-for="Age" type="number" class="form-control" placeholder="30-85" min="18" max="120" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Gender" class="form-label fw-bold">Giới tính *</label>
                            <select asp-for="Gender" class="form-select" required>
                                <option value="">-- Chọn --</option>
                                <option value="0">Nữ</option>
                                <option value="1">Nam</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SystolicBP" class="form-label fw-bold">Tâm thu (mmHg) *</label>
                            <input asp-for="SystolicBP" type="number" class="form-control" placeholder="80-180" min="40" max="250" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DiastolicBP" class="form-label fw-bold">Tâm trương (mmHg) *</label>
                            <input asp-for="DiastolicBP" type="number" class="form-control" placeholder="50-120" min="30" max="150" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Cholesterol" class="form-label fw-bold">Cholesterol (mg/dL)</label>
                            <input asp-for="Cholesterol" type="number" class="form-control" placeholder="150-350" min="0" max="500" />
                            <small class="text-muted">Từ xét nghiệm (tùy chọn)</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="BMI" class="form-label fw-bold">BMI</label>
                            <input asp-for="BMI" type="number" class="form-control" placeholder="18-40" step="0.1" min="10" max="60" />
                            <small class="text-muted">Cân(kg) / (Cao(m))²</small>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-info btn-lg">
                            <i class="bi bi-play-circle"></i> Dự đoán Ngay
                        </button>
                        <a href="/Prediction/SelectDisease" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Chọn bệnh khác
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
