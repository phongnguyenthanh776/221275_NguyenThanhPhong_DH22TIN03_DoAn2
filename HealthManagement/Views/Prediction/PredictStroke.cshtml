@model StrokeRequest

@{
    ViewData["Title"] = "Dự đoán Đột Quỵ";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4><i class="bi bi-activity"></i> Dự đoán Đột Quỵ</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning mb-4">
                    <strong><i class="bi bi-exclamation-triangle"></i> Lưu ý:</strong> Đây là công cụ hỗ trợ dự đoán. Vui lòng tham khảo bác sĩ!
                </div>

                <form asp-action="PredictStroke" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Age" class="form-label fw-bold">Tuổi *</label>
                            <input asp-for="Age" type="number" class="form-control" placeholder="30-90" min="18" max="120" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Gender" class="form-label fw-bold">Giới tính *</label>
                            <select asp-for="Gender" class="form-select" required>
                                <option value="">-- Chọn --</option>
                                <option value="0">Nữ</option>
                                <option value="1">Nam</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Hypertension" class="form-label fw-bold">Tăng huyết áp? *</label>
                            <select asp-for="Hypertension" class="form-select" required>
                                <option value="">-- Chọn --</option>
                                <option value="0">Không</option>
                                <option value="1">Có</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="HeartDisease" class="form-label fw-bold">Bệnh tim? *</label>
                            <select asp-for="HeartDisease" class="form-select" required>
                                <option value="">-- Chọn --</option>
                                <option value="0">Không</option>
                                <option value="1">Có</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Glucose" class="form-label fw-bold">Glucose (mg/dL) *</label>
                            <input asp-for="Glucose" type="number" class="form-control" placeholder="70-200" min="0" max="500" required />
                            <small class="text-muted">Từ xét nghiệm máu</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="BMI" class="form-label fw-bold">BMI *</label>
                            <input asp-for="BMI" type="number" class="form-control" placeholder="18-40" step="0.1" min="10" max="60" required />
                            <small class="text-muted">Cân(kg) / (Cao(m))²</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Smoking" class="form-label fw-bold">Hút thuốc? *</label>
                            <select asp-for="Smoking" class="form-select" required>
                                <option value="">-- Chọn --</option>
                                <option value="0">Không</option>
                                <option value="1">Có</option>
                            </select>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-play-circle"></i> Dự đoán Ngay
                        </button>
                        <a href="/Prediction/SelectDisease" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Chọn bệnh khác
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
