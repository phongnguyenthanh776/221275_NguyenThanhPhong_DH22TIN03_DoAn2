@model DiabetesRequest

@{
    ViewData["Title"] = "Dự đoán Bệnh Tiểu Đường";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h4><i class="bi bi-droplet-fill"></i> Dự đoán Bệnh Tiểu Đường</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning mb-4">
                    <strong><i class="bi bi-exclamation-triangle"></i> Lưu ý:</strong> Công cụ hỗ trợ dự đoán. Tham khảo bác sĩ!
                </div>

                <form asp-action="PredictDiabetes" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Age" class="form-label fw-bold">Tuổi *</label>
                            <input asp-for="Age" type="number" class="form-control" placeholder="20-80" min="10" max="120" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Pregnancies" class="form-label fw-bold">Lần mang thai (Nữ)</label>
                            <input asp-for="Pregnancies" type="number" class="form-control" placeholder="0" min="0" max="20" />
                            <small class="text-muted">Để trống nếu là nam</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Glucose" class="form-label fw-bold">Glucose (mg/dL) *</label>
                            <input asp-for="Glucose" type="number" class="form-control" placeholder="70-200" min="0" max="500" required />
                            <small class="text-muted">Từ xét nghiệm máu lúc đói</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="BMI" class="form-label fw-bold">BMI *</label>
                            <input asp-for="BMI" type="number" class="form-control" placeholder="18.5-40" step="0.1" min="10" max="60" required />
                            <small class="text-muted">Cân(kg) / (Cao(m))²</small>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="bi bi-play-circle"></i> Dự đoán Ngay
                        </button>
                        <a href="/Prediction/SelectDisease" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Chọn bệnh khác
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
