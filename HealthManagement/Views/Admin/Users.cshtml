@model List<NguoiDung>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="bi bi-people"></i> Quản lý người dùng</h2>
        <p class="text-muted">Danh sách người dùng trong hệ thống</p>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Vai trò</th>
                        <th>Ngày đăng ký</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var userRoles = ViewBag.UserRoles as Dictionary<string, string>;
                    }
                    @foreach (var user in Model)
                    {
                        var roleName = userRoles != null && !string.IsNullOrEmpty(user.IdentityUserId) && userRoles.ContainsKey(user.IdentityUserId) 
                            ? userRoles[user.IdentityUserId] 
                            : user.VaiTro?.TenVaiTro ?? "NguoiDung";
                        
                        <tr>
                            <td>@user.MaNguoiDung</td>
                            <td>@user.HoTen</td>
                            <td>@user.Email</td>
                            <td>@user.SoDienThoai</td>
                            <td>
                                <span class="badge @(roleName == "Admin" ? "bg-danger" : "bg-primary")">
                                    @roleName
                                </span>
                            </td>
                            <td>@user.NgayDangKy.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (user.TrangThai)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Vô hiệu hóa</span>
                                }
                            </td>
                            <td>
                                @if (roleName != "Admin")
                                {
                                    @if (user.TrangThai)
                                    {
                                        <form method="post" asp-action="DeleteUser" asp-route-id="@user.MaNguoiDung" style="display: inline;">
                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                    onclick="return confirm('Bạn có chắc muốn vô hiệu hóa người dùng này?')">
                                                <i class="bi bi-trash"></i> Vô hiệu hóa
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" asp-action="ActivateUser" asp-route-id="@user.MaNguoiDung" style="display: inline;">
                                            <button type="submit" class="btn btn-sm btn-success" 
                                                    onclick="return confirm('Bạn có chắc muốn kích hoạt lại người dùng này?')">
                                                <i class="bi bi-check-circle"></i> Kích hoạt lại
                                            </button>
                                        </form>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Về Dashboard
    </a>
</div>
