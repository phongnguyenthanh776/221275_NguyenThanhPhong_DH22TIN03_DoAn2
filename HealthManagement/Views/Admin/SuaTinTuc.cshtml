@model HealthManagement.Models.TinTucSucKhoe

@{
    ViewData["Title"] = "Chỉnh sửa Tin tức";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="bi bi-pencil"></i> Chỉnh sửa Tin tức</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="TinTuc">Tin tức</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="SuaTinTuc" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="NgayTao" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="TieuDe" class="form-label">Tiêu đề <span class="text-danger">*</span></label>
                        <input asp-for="TieuDe" class="form-control" placeholder="Ví dụ: Dự đoán bệnh bằng trí tuệ nhân tạo" />
                        <span asp-validation-for="TieuDe" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label">Mô tả <span class="text-danger">*</span></label>
                        <textarea asp-for="MoTa" class="form-control" rows="3" 
                                  placeholder="Mô tả ngắn gọn về nội dung bài viết"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DanhMuc" class="form-label">Danh mục <span class="text-danger">*</span></label>
                            <input asp-for="DanhMuc" class="form-control" 
                                   placeholder="Ví dụ: AI, Tim mạch, Dinh dưỡng" />
                            <span asp-validation-for="DanhMuc" class="text-danger"></span>
                            <small class="text-muted">Gợi ý: AI, Tim mạch, Dinh dưỡng, Thể dục, Huyết áp, Lối sống</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="MauDanhMuc" class="form-label">Màu danh mục</label>
                            <select asp-for="MauDanhMuc" class="form-select">
                                <option value="primary">Xanh dương (Primary)</option>
                                <option value="success">Xanh lá (Success)</option>
                                <option value="danger">Đỏ (Danger)</option>
                                <option value="warning">Vàng (Warning)</option>
                                <option value="info">Xanh nhạt (Info)</option>
                                <option value="secondary">Xám (Secondary)</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HinhAnhUrl" class="form-label">URL Hình ảnh <span class="text-danger">*</span></label>
                        <input asp-for="HinhAnhUrl" class="form-control" 
                               placeholder="https://images.unsplash.com/photo-..." />
                        <span asp-validation-for="HinhAnhUrl" class="text-danger"></span>
                        <small class="text-muted">Gợi ý: Tìm ảnh miễn phí tại <a href="https://unsplash.com" target="_blank">Unsplash</a></small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Xem trước hình ảnh</label>
                        <div>
                            <img id="previewImage" src="@Model.HinhAnhUrl" alt="Preview" 
                                 style="max-width: 100%; height: 200px; object-fit: cover; border-radius: 8px;" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LinkBaiViet" class="form-label">Link bài viết</label>
                        <input asp-for="LinkBaiViet" class="form-control" 
                               placeholder="https://vinmec.com/..." />
                        <span asp-validation-for="LinkBaiViet" class="text-danger"></span>
                        <small class="text-muted">Link đến bài viết đầy đủ</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ThuTu" class="form-label">Thứ tự hiển thị</label>
                            <input asp-for="ThuTu" type="number" class="form-control" />
                            <span asp-validation-for="ThuTu" class="text-danger"></span>
                            <small class="text-muted">Số càng nhỏ càng ưu tiên</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Hiển thị</label>
                            <div class="form-check form-switch mt-2">
                                <input asp-for="HienThi" class="form-check-input" type="checkbox" />
                                <label asp-for="HienThi" class="form-check-label">
                                    Hiển thị trên trang chủ
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Lưu thay đổi
                        </button>
                        <a asp-action="TinTuc" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6><i class="bi bi-info-circle"></i> Thông tin</h6>
            </div>
            <div class="card-body">
                <p><strong>Ngày tạo:</strong><br />@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>ID:</strong> @Model.Id</p>
                
                <hr />
                
                <p class="mb-0"><strong>Trạng thái:</strong></p>
                @if (Model.HienThi)
                {
                    <span class="badge bg-success">
                        <i class="bi bi-eye"></i> Đang hiển thị
                    </span>
                }
                else
                {
                    <span class="badge bg-secondary">
                        <i class="bi bi-eye-slash"></i> Đang ẩn
                    </span>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="bi bi-info-circle"></i> Hướng dẫn</h6>
            </div>
            <div class="card-body">
                <p><strong>Tiêu đề:</strong> Ngắn gọn, thu hút (tối đa 200 ký tự)</p>
                <p><strong>Mô tả:</strong> Tóm tắt nội dung chính (tối đa 500 ký tự)</p>
                <p><strong>Hình ảnh:</strong> Nên dùng ảnh chất lượng cao, tỷ lệ 16:9</p>
                <p class="mb-0"><strong>Thứ tự:</strong> Tin tức có thứ tự cao hơn sẽ hiển thị trước</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Update preview image when URL changes
        document.querySelector('input[name="HinhAnhUrl"]').addEventListener('input', function(e) {
            document.getElementById('previewImage').src = e.target.value;
        });
    </script>
}
