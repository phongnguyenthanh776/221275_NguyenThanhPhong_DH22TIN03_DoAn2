@model IEnumerable<HealthManagement.Models.TinTucSucKhoe>

@{
    ViewData["Title"] = "Quản lý Tin tức Sức khỏe";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2><i class="bi bi-newspaper"></i> Quản lý Tin tức Sức khỏe</h2>
                <p class="text-muted">Quản lý tin tức và bài viết hiển thị trên trang chủ</p>
            </div>
            <a asp-action="TaoTinTuc" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm tin tức
            </a>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Thứ tự</th>
                            <th>Hình ảnh</th>
                            <th>Tiêu đề</th>
                            <th>Danh mục</th>
                            <th>Ngày tạo</th>
                            <th>Hiển thị</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ThuTu</td>
                                <td>
                                    <img src="@item.HinhAnhUrl" alt="@item.TieuDe" 
                                         style="width: 60px; height: 40px; object-fit: cover; border-radius: 4px;">
                                </td>
                                <td>
                                    <strong>@item.TieuDe</strong>
                                    <br />
                                    <small class="text-muted">@item.MoTa</small>
                                </td>
                                <td>
                                    <span class="badge bg-@item.MauDanhMuc">@item.DanhMuc</span>
                                </td>
                                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (item.HienThi)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-eye"></i> Hiển thị
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-eye-slash"></i> Ẩn
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="SuaTinTuc" asp-route-id="@item.Id" 
                                           class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" 
                                                onclick="confirmDelete(@item.Id, '@item.TieuDe')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="mt-3 text-muted">Chưa có tin tức nào</p>
                <a asp-action="TaoTinTuc" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Tạo tin tức đầu tiên
                </a>
            </div>
        }
    </div>
</div>

<!-- Form xóa ẩn -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmDelete(id, title) {
            if (confirm(`Bạn có chắc chắn muốn xóa tin tức "${title}"?`)) {
                const form = document.getElementById('deleteForm');
                form.action = '@Url.Action("XoaTinTuc", "Admin")' + '?id=' + id;
                form.submit();
            }
        }
    </script>
}
