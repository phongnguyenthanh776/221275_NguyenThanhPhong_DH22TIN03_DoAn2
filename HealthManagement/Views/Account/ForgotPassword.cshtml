@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header text-center">
                <h3><i class="bi bi-key"></i> Quên mật khẩu</h3>
            </div>
            <div class="card-body">
                <p class="text-muted">Nhập email đăng ký để nhận liên kết đặt lại mật khẩu.</p>

                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="example@email.com" autofocus />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-send"></i> Gửi liên kết đặt lại
                        </button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="Login">Quay lại đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
