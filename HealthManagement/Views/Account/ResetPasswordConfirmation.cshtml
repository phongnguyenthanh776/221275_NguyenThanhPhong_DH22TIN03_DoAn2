@{
    ViewData["Title"] = "Đặt lại mật khẩu thành công";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center p-5">
                <h3><i class="bi bi-check2-circle text-success"></i> Đặt lại mật khẩu thành công</h3>
