@model List<HealthManagement.Models.Thuoc>
@{
    ViewData["Title"] = "Thuốc & nhắc uống";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-capsule"></i> Quản lý thuốc</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Thêm thuốc</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info"><i class="bi bi-info-circle"></i> Chưa có thuốc. Thêm mới để bắt đầu.</div>
}

<div class="row g-3">
@foreach (var item in Model)
{
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <strong>@item.Ten</strong>
                    <div class="small text-muted">Liều: @(string.IsNullOrEmpty(item.LieuDung) ? "-" : item.LieuDung) @(string.IsNullOrEmpty(item.DonVi) ? "" : item.DonVi)</div>
                </div>
                <div class="btn-group">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.MaThuoc"><i class="bi bi-pencil"></i></a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Xóa thuốc này?');">
                        <input type="hidden" name="id" value="@item.MaThuoc" />
                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                    </form>
                <!-- ...existing code... -->
            </div>

            @section Scripts {
                <script>
                    // Hiển thị thông báo nhắc uống thuốc khi đến giờ
                    $(document).ready(function () {
                        var now = new Date();
                        console.log('Current time:', now);
                        $('.thuoc-reminder-row').each(function () {
                            var gioNhac = $(this).data('gionhac');
                            var daUong = $(this).data('dauong');
                            var tenThuoc = $(this).data('tenthuoc');
                            console.log('Thuốc:', tenThuoc, 'Giờ nhắc:', gioNhac, 'Đã uống:', daUong);
                            if (!daUong && gioNhac) {
                                var remindTime = new Date(gioNhac);
                                console.log('So sánh remindTime:', remindTime, '<=', now, remindTime <= now);
                                // Nếu giờ nhắc <= hiện tại thì thông báo
                                if (remindTime <= now) {
                                    if (window.Notification && Notification.permission === "granted") {
                                        new Notification('Đến giờ uống thuốc', {
                                            body: 'Đến giờ uống thuốc: ' + tenThuoc,
                                            icon: '/favicon.ico'
                                        });
                                    } else if (window.Notification && Notification.permission !== "denied") {
                                        Notification.requestPermission().then(function (permission) {
                                            if (permission === "granted") {
                                                new Notification('Đến giờ uống thuốc', {
                                                    body: 'Đến giờ uống thuốc: ' + tenThuoc,
                                                    icon: '/favicon.ico'
                                                });
                                            }
                                        });
                                    }
                                }
                            }
                        });
                    });
                </script>
            }
            </div>
            <div class="card-body">
                <p class="mb-2">Số lần/ngày: @(item.SoLanNgay?.ToString() ?? "-")</p>
                <p class="mb-3 text-muted">@(!string.IsNullOrEmpty(item.GhiChu) ? item.GhiChu : "")</p>

                <h6>Giờ nhắc</h6>
                @if (item.LichUongThuoc.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>Giờ</th>
                                    <th>Email</th>
                                    <th>Uống thuốc</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var lich in item.LichUongThuoc.OrderBy(l => l.GioNhac))
                            {
                                <tr class="thuoc-reminder-row" data-gionhac="@lich.GioNhac.ToString("yyyy-MM-ddTHH:mm:ss")" data-dauong="@(lich.DaUong.ToString().ToLower())" data-tenthuoc="@item.Ten">
                                    <td>@lich.GioNhac.ToString("dd/MM HH:mm")</td>
                                    <td>
                                        <span class="badge @(lich.DaGuiEmail ? "bg-info" : "bg-secondary")">
                                            @(lich.DaGuiEmail ? "Đã gửi" : "Chưa gửi")
                                        </span>
                                    </td>
                                    <td>
                                        <form asp-action="ToggleReminder" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@lich.MaLichUong" />
                                            <button type="submit" class="btn btn-sm @(lich.DaUong ? "btn-success" : "btn-outline-secondary")">
                                                @(lich.DaUong ? "Đã uống" : "Chưa")
                                            </button>
                                        </form>
                                    </td>
                                    <td class="text-end">
                                        <form asp-action="DeleteReminder" method="post" class="d-inline" onsubmit="return confirm('Xóa giờ nhắc này?');">
                                            <input type="hidden" name="id" value="@lich.MaLichUong" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-x"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Chưa có giờ nhắc.</p>
                }

                <form asp-action="AddReminder" method="post" class="row g-2 mt-2">
                    <input type="hidden" name="MaThuoc" value="@item.MaThuoc" />
                    <div class="col-8">
                        <input name="GioNhac" class="form-control" type="datetime-local" step="60" required lang="en-GB" />
                    </div>
                    <div class="col-4 d-grid">
                        <button type="submit" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Thêm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
</div>
