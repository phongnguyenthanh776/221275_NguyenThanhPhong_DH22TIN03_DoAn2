@model HealthManagement.Controllers.SleepViewModel
@{
    ViewData["Title"] = "Giấc ngủ";
}
<div class="row g-4">
    <div class="col-lg-5">
        <div class="card">
            <div class="card-header">Ghi nhận giấc ngủ</div>
            <div class="card-body">
                <form asp-action="Add" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Form.GioNgu" class="form-label"></label>
                        <input asp-for="Form.GioNgu" class="form-control" type="datetime-local" asp-format="yyyy-MM-ddTHH:mm" step="60" lang="en-GB" />
                        <span asp-validation-for="Form.GioNgu" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Form.GioDay" class="form-label"></label>
                        <input asp-for="Form.GioDay" class="form-control" type="datetime-local" asp-format="yyyy-MM-ddTHH:mm" step="60" lang="en-GB" />
                        <span asp-validation-for="Form.GioDay" class="text-danger"></span>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Form.ChatLuong" class="form-label"></label>
                            <select asp-for="Form.ChatLuong" class="form-select">
                                <option value="">-- Chọn chất lượng --</option>
                                <option>Xuất sắc</option>
                                <option>Tốt</option>
                                <option>Bình thường</option>
                                <option>Kém</option>
                                <option>Rất kém</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Form.GhiChu" class="form-label"></label>
                            <input asp-for="Form.GhiChu" class="form-control" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3"><i class="bi bi-moon-stars"></i> Lưu</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-7">
        <div class="card">
            <div class="card-header">Giấc ngủ gần đây</div>
            <div class="card-body">
                @if (Model.Logs.Any())
                {
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th>Ngày</th>
                                    <th>Ngủ lúc</th>
                                    <th>Dậy lúc</th>
                                    <th>Giờ ngủ</th>
                                    <th>Chất lượng</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Logs)
                                {
                                    <tr>
                                        <td>@item.GioNgu.ToString("dd/MM/yyyy")</td>
                                        <td>@item.GioNgu.ToString("HH:mm")</td>
                                        <td>@item.GioDay.ToString("HH:mm")</td>
                                        <td>@item.TongGio giờ</td>
                                        <td>@(string.IsNullOrEmpty(item.ChatLuong) ? "-" : item.ChatLuong)</td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.MaGiacNgu"><i class="bi bi-pencil"></i></a>
                                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Xóa bản ghi này?');">
                                                <input type="hidden" name="id" value="@item.MaGiacNgu" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Chưa có dữ liệu.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
